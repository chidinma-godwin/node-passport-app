<div class="col-md-6 m-auto">
<div class="card">
 <h3 class="card-header text-center mb-5">Register</h3>
 <i class="fa fa-user-plus m-auto" style="font-size: 100px;"></i>
 <div class="card-body">
     <% include ./partials/messages %>
    <form action="/users/register" method="POST">
        <div class='form-group'>
            <label for="username">Username</label>
            <input id="username" type='text' class="form-control" placeholder='Choose username' name="username" value="<%= typeof username != "undefined" ? username : "" %>" />
        </div>
        <div class='form-group'>
            <label for="email">Email</label>
            <input id="email" type='email' class="form-control" placeholder='Enter email' name="email" value="<%= typeof email != "undefined" ? email : "" %>" />
        </div>
        <div class='form-group'>
            <label for="password">Password</label>
            <input id="password" type='password' class="form-control" placeholder='Choose password' name="password" value="<%= typeof password != "undefined" ? password : "" %>" />
        </div>
        <div class='form-group'>
            <label for="password2">Password</label>
            <input id="password2" type='password' class="form-control" placeholder='Confirm password' name="password2" value="<%= typeof password2 != "undefined" ? password2 : "" %>" />
        </div>
        <button type="submit" class="btn btn-primary text-center">Register</button>
    </form>
    <p class="mt-5">Already have an account? <a href="/users/login">Login here</a></p>
  </div>
</div>
</div>
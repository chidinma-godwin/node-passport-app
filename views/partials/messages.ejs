<% if(typeof errors !== "undefined") { %>
    <% errors.forEach(error=> { %>
        <div class="alert alert-danger alert-dismissable fade show" role="alert">
            <%= error.msg %>
            <button class="close" data-dismiss="alert" aria-label="close"><span aria-hidden="true">&times;</span></button>
        </div>
     <% }) %>
<% } %>

<% if(success_msg != '') {%>
    <div class="alert alert-dismissable fade show alert-success" role="alert">
        <%= success_msg %>
        <button class="close" data-dismiss="alert" arial-label="close"><span arial-hidden="true">&times;</span></button>
    </div>
<% } %>

<% if(error_msg != '') { %>
    <div class="alert alert-dismissable alert-danger fade show" role="alert">
        <%= error_msg %>
        <button class="close" data-dismiss="alert" arial-label="close"><span arial-hidden="true">&times;</span></button>
    </div>
<% } %>

<% if(error != '') {%>
    <div class="alert alert-danger alert-dismissable fade show", role="alert">
        <%= error %>
        <button class="close" data-dismiss="alert" arial-label="close"><span arial-hidden="true">&times;</span></button>
    </div>
<% } %>
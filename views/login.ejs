<div class="col-md-6 m-auto">
<div class="card">
 <h3 class="card-header text-center mb-5">Login</h3>
 <i class="fa fa-user-circle m-auto" style="font-size: 100px;"></i>
 <div class="card-body">
    <% include ./partials/messages %>
    <form action="/users/login" method="POST">
        <div class='form-group'>
            <label for="email">Email</label>
            <input id="email" type='email' class="form-control" placeholder='Enter email' name="email" value="<%= typeof email != "undefined" ? email : "" %>" />
        </div>
        <div class='form-group'>
            <label for="password">Password</label>
            <input id='password' type='password' class="form-control" placeholder='Enter password' name="password" value="<%= typeof password != "undefined" ? password : "" %>" />
        </div>
        <button type="submit" class="btn btn-primary text-center">Login</button>
    </form>
    <p class="mt-5">Don't have an account? <a href="/users/register">Register here</a></p>
  </div>
</div>
</div>